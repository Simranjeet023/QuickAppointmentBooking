@model LoginViewModel
@{ViewBag.Title = "Home";}

<div class="row login-container">
    <div class="col span-2-of-3">
        <div class="container_branding">
            <img src="~/images/photo-1486406146926-c627a92ad1ab.png" class="banner" alt="CELS banner">
            <div class="content">
                <h1>Leverage your skills for career advantage</h1><br>
                <p><i>Get connected, getAccredited!</i></p>
            </div>
        </div>
    </div>

    <div class="col span-1-of-3">
        <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
            <div>
                <i class="fa fa-user icon" aria-hidden="true"></i>
                <input asp-for="UserName" type="text" name="username" id="username" placeholder="Your username" required>
            </div>

            <div>
                <i class="fa fa-key icon" aria-hidden="true"></i>
                <input asp-for="Password" type="password" name="password" id="password" placeholder="Your password" required>
            </div>

            <div>
                <input type="submit" value="Log In">
            </div>

            <div>
                <label>
                    &nbsp;
                </label>
            </div>
            <div>
                <label class="line">
                    &nbsp;
                </label>
            </div>

            <div>
                <label>
                    <strong>Don't have an account?</strong>
                </label>
            </div>

            <div>
                <a asp-controller="Account" asp-action="Register" class="btn">Create Student Account</a>
            </div>
            <div>
                <a asp-controller="Account" asp-action="Register" asp-route-role="@Utility.ROLE_REP" class="btn">Create Representative Account</a>
            </div>
        </form>
    </div>
</div>